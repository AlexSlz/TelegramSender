{
  "name": "senderEx",
  "version": "6.6.6",
  "description": "Alexander Seleznev",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"],
      "css": ["style.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["storage", "tabs", "activeTab", "contextMenus"],
  "manifest_version": 2,
  "minimum_chrome_version": "23"
}
